<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mvc_jquery_webpack_template</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/dist/css/common.bundle.css" />
        <link rel="stylesheet" href="~/dist/css/main.bundle.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/dist/css/common.bundle.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/dist/css/main.bundle.min.css" asp-append-version="true" />
    </environment>

</head>
<body data-controller="@ViewContext.RouteData.Values["Controller"]" data-action="@ViewContext.RouteData.Values["Action"]">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">mvc_jquery_webpack_template</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="NewJsPage">New JS Page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - mvc_jquery_webpack_template - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/dist/js/common.bundle.js"></script>
        <script src="~/dist/js/main.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/common.bundle.min.js" asp-append-version="true"></script>
        <script src="~/dist/js/main.bundle.min.js" asp-append-version="true"></script>
    </environment>
  

    @RenderSection("Scripts", required: false)
</body>
</html>
